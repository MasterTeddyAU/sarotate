#!/usr/bin/env bash
# Written by Visorak and 88lex ; Use latest rclone beta for best result
# Usage: ./sarotate -c config.yml

usage()
{
    echo "usage: ./sarotate options: -c"
    echo "Example: ./sarotate -c conf.yml"
}

optChoose() {
while getopts ':c:' choice
do
    case "${choice}" in
      c) cf=$OPTARG ;;
     \?) echo "Invalid option: -${OPTARG}" 1>&2; usage; exit 1 ;;
      :) echo "Invalid option: -${OPTARG} requires an argument." 1>&2; usage; exit 1 ;;
      *) usage; exit 1 ;;
  esac
done
shift $((OPTIND -1))
}

optConfCheck() {
if [ -z "$cf" ]; then 
echo ""
echo "ERROR: SARotate requires a configuration file." 
echo ""
usage
exit 1
fi
}

mainInit () {
COUNT="$(yyq r "$cf" global.minjs)"
MOD=$(( "$(yyq r "$cf" global.maxjs)" - "$(yyq r "$cf" global.minjs)" + 1 ))
    unset $notif_key; unset "$(yyq r "$cf" log.notif)"
    if [[ "$(yyq r "$cf" log.notif)" = "key" ]];then notif_key=" tee >($(yyq r "$cf" log.notif))";fi
    if [[ "$(yyq r "$cf" log.notif)" = "all" ]];then notif=" tee >($(yyq r "$cf" log.notif))" && notif_key="$(yyq r "$cf" log.notif)";fi
    if [ ! -d "$(yyq r "$cf" log.log_dir)" ];then mkdir -p "$(yyq r "$cf" log.log_dir)"; fi
    if [ ! -f "$(yyq r "$cf" log.log_file)" ];then touch "$(yyq r "$cf" log.log_file)"; fi
    if [[ -f "$(yyq r "$cf" log.log_file)" ]];then tail -n 50 "$(yyq r "$cf" log.log_file)" > tmp;mv tmp "$(yyq r "$cf" log.log_file)";fi;
}

arrayCombine() {
readarray -t arrayRemote < <(yyq r "$cf" main.remote | sed -E 's/- +\ ?//g')
readarray -t arrayPort < <(yyq r "$cf" main.port | sed -E 's/- +\ ?//g')
}

mainRotate () {
echo -e "[$(date "+%d.%m.%Y %T") INFO]: SA Rotate is now initializing these mounts, starting with $(yyq r "$cf" global.json_dir)/$COUNT.json with an increment of $(yyq r "$cf" global.nextjs)" |& eval tee $notif_key | tee -a "$(yyq r "$cf" log.log_file)"
jin=0
while [ $jin -lt ${#arrayRemote[*]} ]; do
 echo -e "[$(date "+%d.%m.%Y %T") INFO]: Switching remote ${arrayRemote[$jin]%:*} to use service account $COUNT.json for $(yyq r "$cf" global.sleeptime)" |& eval tee "$notif_key" | tee -a "$(yyq r "$cf" log.log_file)"
    rclone rc --rc-user="$(yyq r "$cf" global.rc_user)" --rc-pass="$(yyq r "$cf" global.rc_pass)" --rc-addr "$(yyq r "$cf" rclone.ip)":"${arrayPort[$jin]}" backend/command command=set fs="${arrayRemote[$jin]%:*}": -o \
    service_account_file="$(yyq r "$cf" global.json_dir)"/"$COUNT".json --config="$(yyq r "$cf" rclone.rclone_config)" --log-level=ERROR |& eval tee "$notif_key" | tee -a "$(yyq r "$cf" log.log_file)"
   COUNT=$(( ((COUNT - "$(yyq r "$cf" global.minjs)" + "$(yyq r "$cf" global.nextjs)") % MOD) + "$(yyq r "$cf" global.minjs)" ))
  jin=$(( jin + 1 ));
done
echo -e "[$(date "+%d.%m.%Y %T") INFO]: SARotate will now go idle for $(yyq r "$cf" global.sleeptime)." | tee -a "$(yyq r "$cf" log.log_file)"
sleep "$(yyq r "$cf" global.sleeptime)"
}

optChoose "$@"
optConfCheck
mainInit
arrayCombine
mainRotate
